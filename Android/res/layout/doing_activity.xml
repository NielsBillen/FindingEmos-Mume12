<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/emotionbackground"
    android:orientation = "vertical">

    	<ScrollView android:layout_width="fill_parent"
    	    android:layout_height="0dp"
	    	android:layout_weight="1">
	    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		    xmlns:tools="http://schemas.android.com/tools"
		    android:layout_width="fill_parent"
		    android:layout_height="0dp"
		    	android:layout_weight="1"
		    android:background="@drawable/emotionbackground"
		    android:orientation = "vertical"
		    android:id = "@+id/doing_linearlayout">
		    
	        <TextView android:id="@+id/contacts_view_favorites"
	          	android:layout_width="fill_parent"
	        		android:layout_height="wrap_content"
	        		android:text="Select your category"
	        		android:textColor= "#FFFFFF"
	        		android:textSize="12dp"
	        		android:layout_marginBottom="5dp"
	        		android:layout_marginTop="5dp"
	        		android:layout_marginLeft="10dp"
	        		android:background="@drawable/emotionbackground"
	 		/>
	        
	          <View android:layout_height="3dp"
	    			android:layout_width="fill_parent"
	    			android:background="#90909090"/>
		    
		</LinearLayout>	
	</ScrollView>
	
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    		xmlns:tools="http://schemas.android.com/tools"
    		android:layout_width="fill_parent"
    		android:layout_height="50dp" 
    		android:orientation="horizontal" 
    		android:background="@drawable/emotionscroller"
    		android:focusable="true"
    		android:focusableInTouchMode="true"
    		android:id ="@+id/doing_bottom_bar">

        <Button
            android:id="@+id/doing_button_add"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:textSize="14dp"
            android:text="Add" />

        <EditText
            android:id="@+id/doing_edittext_add_category"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/doing_button_add"
            android:hint = "Enter new category"
            android:ems="10" >
            
        </EditText>
	    
    </RelativeLayout>

</LinearLayout>
