<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/emotionbackground"
    android:id = "@+id/visualization_main_screen" >

    <!-- Add the custom activity indicator -->
    <com.findingemos.felicity.general.ActivityIndicator
        android:id="@+id/activityIndicator"
        android:layout_width="fill_parent"
        android:layout_height="32dp" />
    
    <LinearLayout 
        android:id="@+id/topSelector"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        
        <com.findingemos.felicity.visualization.ArrowButton
            android:id="@+id/topArrowLeft"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            />
        
        <com.findingemos.felicity.visualization.OptionSpinner
            android:id="@+id/topSpinner"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            />
        
        <com.findingemos.felicity.visualization.ArrowButton
            android:id="@+id/topArrowRight"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            />
        
    </LinearLayout>
	
    <com.findingemos.felicity.util.VerticalScrollView
        android:id = "@+id/visualization_emo_scrollview"
        android:layout_width="fill_parent"
    	    android:layout_height="0dp"
	    	android:layout_weight="1" >
        
	    <LinearLayout android:id = "@+id/visualization_layout"
	        android:layout_width = "fill_parent"
	        android:layout_height = "wrap_content"
	        android:orientation="vertical">
		</LinearLayout>
		
	  </com.findingemos.felicity.util.VerticalScrollView>
    
</LinearLayout>